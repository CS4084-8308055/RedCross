<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".TreatmentActivity"
    tools:showIn="@layout/activity_treatment">
    <ScrollView
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.33">
        <TextView
            android:id="@+id/itemview_treatment"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ScrollView>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/itemview_comment"
            android:layout_width="match_parent"
            android:textColor="@android:color/black"
            android:textColorHint="@color/toolbarText"
            android:textSize="20sp"
            android:hint="Comments"
            android:layout_margin="20dp"
            android:gravity="left"
            android:layout_height="wrap_content"/>
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:id="@+id/itemview_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:onClick="handleYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/respond_yes"
            />
        <Button
            android:onClick="handleNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/respond_no"
            />
    </LinearLayout>

</LinearLayout>